<Window x:Class="MSP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monitor Systemu"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Width="400" Height="350"
        Topmost="True">

    <Border CornerRadius="15" Background="Transparent" Padding="15">
        <StackPanel>
            <TextBlock Text="CPU Usage:" FontWeight="Bold" FontSize="14" Foreground="White"/>
            <ProgressBar x:Name="CpuProgressBar" Height="25" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="CpuText" FontSize="12" Margin="0,0,0,10" Foreground="LightGray"/>

            <TextBlock Text="RAM Usage:" FontWeight="Bold" FontSize="14" Foreground="White"/>
            <ProgressBar x:Name="RamProgressBar" Height="25" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="RamText" FontSize="12" Margin="0,0,0,10" Foreground="LightGray"/>

            <TextBlock Text="Disk Usage:" FontWeight="Bold" FontSize="14" Foreground="White"/>
            <ProgressBar x:Name="DiskProgressBar" Height="25" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="DiskText" FontSize="12" Margin="0,0,0,10" Foreground="LightGray"/>

            <TextBlock Text="Network Usage:" FontWeight="Bold" FontSize="14" Foreground="White"/>
            <TextBlock x:Name="NetText" FontSize="12" Margin="0,0,0,10" Foreground="LightGray"/>
        </StackPanel>
    </Border>
</Window>
